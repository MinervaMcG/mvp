<policymap>
  <policy domain="resource" name="memory" value="256MiB"/>
  <policy domain="resource" name="map" value="512MiB"/>
  <policy domain="resource" name="width" value="10MiB"/>
  <policy domain="resource" name="height" value="10MiB"/>
  <policy domain="resource" name="area" value="128MB"/>
  <policy domain="resource" name="disk" value="1GiB"/>
  <policy domain="delegate" rights="all" pattern="URL" />
  <policy domain="delegate" rights="all" pattern="HTTPS" />
  <policy domain="delegate" rights="all" pattern="HTTP" />
  <policy domain="path" rights="all" pattern="@*"/>
